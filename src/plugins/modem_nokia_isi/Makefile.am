include $(top_srcdir)/Makefile.decl

NULL =

AM_CPPFLAGS = \
	-I$(top_srcdir)/src/lib \
	-I$(top_srcdir)/src/3rdparty \
	$(FSO_CFLAGS) \
	$(GLIB_CFLAGS) \
	$(GEE_CFLAGS) \
	$(ISI_CFLAGS) \
	-DG_LOG_DOMAIN=\"fsogsm.modem_nokia_isi\" \
	$(NULL)

noinst_PROGRAMS = $(TEST_PROGS)

progs_ldadd = \
	$(FSO_LIBS) \
	$(GLIB_LIBS) \
	$(GEE_LIBS) \
	$(ISI_LIBS) \
	$(top_builddir)/src/lib/libfsogsm.la

VALAC_ARGS = \
	--basedir $(top_srcdir) \
	--vapidir $(top_srcdir)/src/lib \
	--pkg posix \
	--pkg glib-2.0 \
	--pkg gio-2.0 \
	--pkg gee-1.0 \
	--pkg fso-glib-1.0 \
	--pkg fsoframework-2.0 \
	--pkg fsotransport-2.0 \
	--pkg fsogsm-2.0 \
	--pkg gisicomm-1.0

#
# plugin
#
modlibexecdir = $(libdir)/cornucopia/modules/fsogsm
modlibexec_LTLIBRARIES = modem_nokia_isi.la
modem_nokia_isi_la_SOURCES = \
	plugin.c \
	isitransport.c \
	channel.c \
	unsolicited.c \
	callhandler.c \
	isicallmediators.c \
	isidebugmediators.c \
	isidevicemediators.c \
	isimediatorhelpers.c \
	isinetworkmediators.c \
	isipdpmediators.c \
	isisimmediators.c \
	isismsmediators.c \
	$(NULL)

modem_nokia_isi_la_VALASOURCES = \
	plugin.vala \
	isitransport.vala \
	channel.vala \
	unsolicited.vala \
	callhandler.vala \
	isicallmediators.vala \
	isidebugmediators.vala \
	isidevicemediators.vala \
	isimediatorhelpers.vala \
	isinetworkmediators.vala \
	isipdpmediators.vala \
	isisimmediators.vala \
	isismsmediators.vala \
	$(NULL)

$(modem_nokia_isi_la_SOURCES): $(modem_nokia_isi_la_VALASOURCES)
	$(VALAC) -C $(VALAC_ARGS) $^
	touch $@
modem_nokia_isi_la_LIBADD = $(progs_ldadd)
modem_nokia_isi_la_LDFLAGS = -no-undefined -module -avoid-version
modem_nokia_isi_la_LIBTOOLFLAGS = --tag=disable-static

EXTRA_DIST += \
	$(modem_nokia_isi_la_VALASOURCES) \
	$(modem_nokia_isi_la_SOURCES) \
	$(NULL)

CLEANFILES = \
    *.c \
    *.h \
    *.la \
    *.lo \
    $(NULL)

MAINTAINERCLEANFILES = \
  Makefile.in \
  $(NULL)
